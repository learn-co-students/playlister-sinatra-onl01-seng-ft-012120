
<h2>Create your new song!!</h2>

<form action="/songs/" method="post">
  <label for="song_name">Name
    <input type="text" name="song[name]" id="name">
  </label>
  <br>
  <br>
  <label for="artist_name"> Artist Name 
    <input type="text" name="artist[name]" id="artist_name">
  </label>
  <br>

  <% Genre.all.each do |genre| %>

    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value= <%= genre.id %>>
    <label for="<%= genre.name %>"><%= genre.name %></label>
  <% end %>

  <input type="submit" value="Create">
</form>