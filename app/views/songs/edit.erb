<h2>Edit Your Song!!</h2>

<form action="/songs/<%= @song.slug %>" method="post">
<input id="hidden" type="hidden" name="_method" value='patch'>
  <label for="song_name">Name
    <input type="text" name="song[name]" id="song_name" value='<%= @song.name %>'>
  </label>
  <br>
  <br>
  <label for="artist_name"> Artist Name 
    <input type="text" name="artist[name]" id="artist_name" value='<%=@song.artist.name%>'>
  </label>
  <br>

  <% Genre.all.each do |genre| %>
    <input <%='checked' if @song.genres.include?(genre)%> type="checkbox" name="genres[]" id="<%= genre.name %>" value= <%= genre.id %>>
    <label for="<%= genre.name %>"><%= genre.name %></label>
  <% end %>

  <input type="submit" value="Save">
 </form>