<form method="post" action="/songs/<%= @song.slug %>">
    <input type="hidden" name="_method" value="patch">
    <label>Song name:</lable>
    <input id="Name" type="text" name="Name" value="<%= @song.name %>">
    <label>Artist name:</label>
    <input type="text" id="Artist Name" name="Artist Name" value="<%= @song.artist.name %>">
    <% @genres.each do |genre| %>
        <label><%= genre.name%></label>
        <input type="checkbox" id="<%= genre.name %>" value="<%= genre.id %>" name="genres[]" <%= "checked" if @song.genre_ids.include?(genre.id)%>>
    <% end %>
    <button type="submit">Save</button>
</form>